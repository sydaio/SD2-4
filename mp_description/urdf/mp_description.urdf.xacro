  <ros2_control name="mecanum_base" type="system">

    <hardware>
      <plugin>robot_interface_test/Robot7DoF</plugin>

      <param name="serial_dev_name">/dev/ttyUSB1</param>
      <param name="serial_baud_rate">115200</param>
      <param name="testParam">0</param>
    </hardware>

    <joint name="front_left_joint">
      <param name="motor_id"> 5 </param>
      <command_interface name="velocity">
        <param name="min">-20.0</param>
        <param name="max">20.0</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
    </joint>

    <joint name="front_right_joint">
    <param name="motor_id"> 0 </param>
      <command_interface name="velocity">
        <param name="min">-20.0</param>
        <param name="max">20.0</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
    </joint>

    <joint name="rear_left_joint">
    <param name="motor_id"> 2 </param>
      <command_interface name="velocity">
        <param name="min">-20.0</param>
        <param name="max">20.0</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
    </joint>

    <joint name="rear_right_joint">
    <param name="motor_id"> 1 </param>
      <command_interface name="velocity">
        <param name="min">-20.0</param>
        <param name="max">20.0</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
    </joint>

  </ros2_control> 


</robot>
