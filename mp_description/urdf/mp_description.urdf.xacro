<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mecanum_robot">

  <!-- ================================================== -->
  <!-- Parameters -->
  <!-- ================================================== -->
  <xacro:property name="wheel_radius" value="0.09"/>
  <xacro:property name="wheel_width" value="0.04"/>

  <!-- Front–rear distance -->
  <xacro:property name="wheelbase" value="0.103"/>

  <!-- Left–right distance -->
  <xacro:property name="wheel_distance" value="0.18"/>

  <xacro:property name="chassis_length" value="0.45"/>
  <xacro:property name="chassis_width"  value="0.35"/>
  <xacro:property name="chassis_height" value="0.08"/>

  <!-- ================================================== -->
  <!-- Base Link -->
  <!-- ================================================== -->
<link name="base_link">
    <visual>
      <origin xyz="0 0 -0.000069" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://mp_description/meshes/base_link_visual.obj" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.26 0.18 0.0775" />
      </geometry>
    </collision>
    <inertial>
      <mass value="5" />
      <inertia ixx="0.016" ixy="0" ixz="0" iyy="0.030668" iyz="0" izz="0.041666" />
    </inertial>
  </link>

  <!-- Rear Left Wheel -->
  <link name="rear_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://mp_description/meshes/rear_left_wheel_visual.obj" />
      </geometry>
    </visual>
    <inertial>
      <mass value="1" />
      <inertia ixx="0.000688" ixy="0" ixz="0" iyy="0.000688" iyz="0" izz="0.000998" />
    </inertial>
  </link>
  <joint name="front_left_joint" type="continuous">
    <origin xyz="0.09 0.071504 0.000175" rpy="1.570796 0 0" />
    <parent link="base_link" />
    <child link="front_left_wheel" />
    <axis xyz="0 0 1" />
  </joint>

   <!-- Rear Right Wheel -->
  <link name="rear_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://mp_description/meshes/rear_right_wheel_visual.obj" />
      </geometry>
    </visual>
    <inertial>
      <mass value="1" />
      <inertia ixx="0.000688" ixy="0" ixz="0" iyy="0.000688" iyz="0" izz="0.000998" />
    </inertial>
  </link>
  <joint name="rear_right_joint" type="continuous">
    <origin xyz="-0.09 -0.071496 0.000175" rpy="1.570796 0 -3.141593" />
    <parent link="base_link" />
    <child link="rear_right_wheel" />
    <axis xyz="0 0 1" />
  </joint>

  <!-- Front Left Wheel -->
  <link name="front_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://mp_description/meshes/front_left_wheel_visual.obj" />
      </geometry>
    </visual>
    <inertial>
      <mass value="1" />
      <inertia ixx="0.000688" ixy="0" ixz="0" iyy="0.000688" iyz="0" izz="0.000998" />
    </inertial>
  </link>
  <joint name="rear_left_joint" type="continuous">
    <origin xyz="-0.09 0.071504 0.000175" rpy="1.570796 0 0" />
    <parent link="base_link" />
    <child link="rear_left_wheel" />
    <axis xyz="0 0 1" />
  </joint>
  
  <!-- Front Right Wheel --> 
  <link name="front_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://mp_description/meshes/front_right_wheel_visual.obj" />
      </geometry>
    </visual>
    <inertial>
      <mass value="1" />
      <inertia ixx="0.000688" ixy="0" ixz="0" iyy="0.000688" iyz="0" izz="0.000998" />
    </inertial>
  </link>
  <joint name="front_right_joint" type="continuous">
    <origin xyz="0.09 -0.071496 0.000175" rpy="1.570796 0 -3.141593" />
    <parent link="base_link" />
    <child link="front_right_wheel" />
    <axis xyz="0 0 1" />
  </joint>


  <link name="base_footprint">
    <inertial>
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
  </link>
  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 -0.038825" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="base_footprint" />
  </joint>

  <link name="laser">
    <inertial>
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
  </link>
  <joint name="laser_joint" type="fixed">
    <origin xyz="0.070733 0 0.086997" rpy="0 0 -1.570796" />
    <parent link="base_link" />
    <child link="laser" />
  </joint>

  <link name="camera">
    <inertial>
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
  </link>
  <joint name="camera_joint" type="fixed">
    <origin xyz="0.081656 0.036685 0.067712" rpy="-1.570796 0 -1.570796" />
    <parent link="base_link" />
    <child link="camera" />
  </joint>



